<ul class="cards">
  {{#each yourneys}}
    <li class="yourney-card">
      <div>
        <h3>{{this.name}}</h3>
        <p class="owner">Created by <a href="#">{{this.owner}}</a></p>
        <p class="duration">Days: {{this.days}}</p>
        {{#if this.date}}
        <p class="date">Date: {{this.date}}</p>
        {{/if}}
        <p class="snippet">{{this.snippet}}</p>
        <a href="/yourney/{{this._id}}" class="see-more">+</a>
        <button type="submit" class="icon icon-heart"></button>
        <button type="submit" class="icon icon-share">S</button>
        <button type="submit" class="button add">Add</button>
        {{#if this.addedBy}}
          <button type="submit" class="button">Added</button>
        {{/if}}
        {{#if this.owner}}
          <button type="submit" class="button">Edit</button>
        {{/if}} 
        {{!-- WHYYYYY --}}
        {{else}}
        <p class="empty">No content</p>
      </div>
    </li>
  {{/each}}
</ul>

