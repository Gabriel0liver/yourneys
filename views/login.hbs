<h2>Login</h2>

<form method="POST" action="/auth/login">
  <div class="field">
    <label>Email</label>
    <input type="text" name="email" value="{{fields.email}}" placeholder="robinsoncrusoe@gmail.com" />
  </div>

  <div class="field">
    <label>Password</label>
    <input type="password" name="password" placeholder="Enter Password" />
  </div>

  <div class="field submit">
    <button type="submit">Login</button>
  </div>
  {{#if message}}
  <p class="validation">{{message}}</p>
  {{/if}}

  <div>
    <p> or </p>
  </div>
  
  <div class="field submit">
    <a class="button" href="/auth/signup" type="submit">Signup</a>
  </div>
</form>