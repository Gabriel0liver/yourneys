<main class="container">
  <div class="info-site">
    <h2 class="title">Edit your yourney</h2>
  </div>
  <form method="POST" action="/yourney/{{yourney.id}}/edit" enctype="multipart/form-data">
    <div class="field">
      <label></label>
      <input type="text" name="name" value="{{yourney.name}}" placeholder="Yourney name" class="title-form" maxlength="15" />
    </div>

    <div class="field">
      <label>Snippet</label>
      <input type="text" name="snippet" placeholder="In one sentence describe your yourney" value="{{yourney.snippet}}" />
    </div>

    <div class="field">
      <label>Description</label>
      <input type="text" name="description" value="{{yourney.description}}" />
    </div>

    <div class="field">
      <label>Location</label>
      <input type="text" name="location" placeholder="Barcelona" value="{{yourney.location}}" />
    </div>

    <div class="field select">
      <label class="option-label">Days</label>
      <div class="option-value">
        <select name="days">
          <option value="0">select</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5+">5+</option>
        </select>
      </div>
    </div>

    <div class="field">
      <label>Image</label>
      <input type="file" name="img">
    </div>

    <div class="field submit">
      <button type="submit" class="submit-button">Save</button>
    </div>
    {{#if message}}
    <p class="validation">{{message}}</p>
    {{/if}}

  </form>
</main>